<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.damian.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Witaj w restauracji XYZ"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:textColor="@color/colorPrimary"
        android:paddingTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aby złożyć zamówienie wpisz numer stolika oraz wybierz pozycję z listy"
        android:paddingTop="100dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Podaj numer stolika"
        android:gravity="center"
        android:paddingTop="40dp"
        android:id="@+id/edit_stolik"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"/>

    <Button
        android:layout_width="324dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:text="Wybierz Danie"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:layout_marginTop="200dp"
        android:id="@+id/wybierz_danie"/>

</LinearLayout>
